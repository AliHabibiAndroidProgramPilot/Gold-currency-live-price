<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/black"
    android:padding="5dp"
    tools:context=".CurrencyPriceFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_currencyPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/recycler_item_currency" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:indeterminateTint="@color/splash_gold"
        app:layout_constraintBottom_toBottomOf="@+id/recycler_currencyPrice"
        app:layout_constraintEnd_toEndOf="@+id/recycler_currencyPrice"
        app:layout_constraintStart_toStartOf="@+id/recycler_currencyPrice"
        app:layout_constraintTop_toTopOf="@+id/recycler_currencyPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>