<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:paddingTop="12dp"
    android:paddingEnd="5dp"
    android:paddingBottom="12dp">

    <FrameLayout
        android:id="@+id/icon_background_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/main_bg">

        <ImageView
            android:id="@+id/content_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/gold_icons"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_24" />

    </FrameLayout>

    <TextView
        android:id="@+id/content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="18dp"
        android:layout_toStartOf="@id/icon_background_view"
        android:layout_toEndOf="@id/content_price"
        android:fontFamily="@font/sans_fa_name_regular"
        android:maxLines="4"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="گرم طلا 18 عیار" />

    <TextView
        android:id="@+id/content_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/sans_fa_name_regular"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:textColor="@color/gold_text"
        android:textSize="16sp"
        tools:text="5,000,000" />

</RelativeLayout>